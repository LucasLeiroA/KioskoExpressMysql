<%- include('../partials/header.ejs') %> 


<body>

    <div class="container pt-5 text-center mt-5">

    
        <div class="table-responsive col-lg-9 col-sm-12 col-12 m-auto ">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Pago ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Tipo de Pago</th>
                        <th>Total Pago</th>
                        <th>Anular</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if(pagos){
                        for(var i=0 ; i < pagos.length ; i++){ %>
                            <tr>                      
                                <th><%= pagos[i].pagoCuentaCorrriente_id %></th>
                                <th><%= pagos[i].cliente_nombre %></th>
                                <th><%= pagos[i].fechaTotal %></th>
                                <th><%= pagos[i].tipoVenta %></th>
                                <th><%= pagos[i].pagoCuentaCorrriente_montoPago %></th>
                                <th><a  onclick="anularPago('<%= pagos[i].pagoCuentaCorrriente_id %>','<%= pagos[i].tipoVenta_id %>')"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                  </svg></a></th>
                            </tr>
                        <% }
                    } %>
                </tbody>

              </table>   
        </div>
    
        
        <div>
                <a href="/reportesMultiples/pagoCuentaCorriente" class="btn btn-danger mb-3">Volver</a>
        </div>
    </div>
</body>


<script>


    function anularPago(idPago,idTipoVenta){

        Swal.fire({
                title: "Estas Seguro que quieres Anular el Pago?",
                showDenyButton: true,
                confirmButtonText: "Anular",
                denyButtonText: `Cancelar`
                }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {

                    Swal.fire("Pago anulado Correctamente!", "", "success");
                    setTimeout(() => {
                        window.location.replace(`/reportesMultiples/anulacionPago/${idPago}/${idTipoVenta}`);
                    }, 1500);
                  
                } else if (result.isDenied) {
                    Swal.fire("El pago No se anulo", "", "info");
                }
                });
    }

</script>